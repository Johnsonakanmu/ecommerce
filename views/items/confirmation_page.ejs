<div class="page-content"  style="margin: 40px auto;">

    <!-- Start Container Fluid -->
    <div class="container-xxl">

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <!-- Logo & title -->
                        <div class="clearfix pb-3 bg-info-subtle p-lg-3 p-2 m-n2 rounded position-relative">
                            <div class="float-sm-start">
                                <div class="auth-logo">
                                    <img class="logo-dark me-1" style="height: 70px;" src="assets/images/tripple44fc-pic.png" alt="logo-dark" height="24" />
                                </div>
                                <div class="mt-4">
                                    <h4>Tripple44FC Admin.</h4>
                                    <address class="mt-3 mb-0">
                                        Km 10, off Akala Road, Elowura, <br>
                                        Ibadan, Oyo State, Nigeria. <br>
                                        <abbr title="Phone">Phone:</abbr> + 234 9024837647
                                    </address>
                                </div>
                            </div>
                            <div class="float-sm-end">
                                <div class="table-responsive">
                                    <table class="table table-borderless mb-0">
                                        <tbody>
                                            
                                            <tr>
                                                <td class="p-0 pe-5 py-1">
                                                    <p class="mb-0">Issue Date: </p>
                                                </td>
                                                <td class="text-end text-dark fw-medium px-0 py-1"><%= new Date().toLocaleDateString() %></td>
                                            </tr>
                                            <tr>
                                                <td class="p-0 pe-5 py-1">
                                                    <p class="mb-0">Due Date : </p>
                                                </td>
                                                <td class="text-end text-dark fw-medium px-0 py-1"><%= new Date(Date.now() + 7 * 24 * 60 * 60 * 1000).toLocaleDateString() %></td>
                                            </tr>
                                            <tr>
                                                <td class="p-0 pe-5 py-1">
                                                    <p class="mb-0">Amount : </p>
                                                </td>
                                                <td class="text-end text-dark fw-medium px-0 py-1">$<%=  grandTotal.toFixed(2) %></td>
                                            </tr>
                                            <tr>
                                                <td class="p-0 pe-5 py-1">
                                                    <p class="mb-0">Status : </p>
                                                </td>
                                                <td class="text-end px-0 py-1"><span class="badge bg-success text-white  px-2 py-1 fs-13">Paid</span></td>
                                            </tr>


                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="position-absolute top-100 start-50 translate-middle">
                                <img src="assets/images/check-2.png" alt="" class="img-fluid">
                            </div>
                        </div>

                         <div class="clearfix pb-3" style="margin-top: 80px;">
                            <div class="float-sm-start">
                                <div class="">
                                    <h4 class="card-title">Issue From :</h4>
                                    <div class="mt-3">
                                        <h4>Tripple44FC Admin</h4>
                                        <p class="mb-2"> Km 10, off Akala Road, Elowura, Ibadan, Oyo State, Nigeria.</p>
                                        <p class="mb-2"><span class="text-decoration-underline">Phone :</span> + 234 9024837647</p>
                                        <p class="mb-2"><span class="text-decoration-underline">Email :</span> info@tripple44fc.com</p>
                                    </div>
                                </div>
                            </div>
                            <div class="float-sm-end">
                                <div class="">
                                    <h4 class="card-title">Issue For :</h4>
                                    <div class="mt-3">
                                        <h4><%= user.fullName %></h4>
                                        <p class="mb-2"><%= shippingDetails.address %></p>
                                        <p class="mb-2"><span class="text-decoration-underline">Phone :</span> <%= user.phone %></p>
                                        <p class="mb-2"><span class="text-decoration-underline">Email :</span> <%= user.email %></p>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive table-borderless text-nowrap table-centered">
                                    <table class="table mb-0">
                                        <thead class="bg-light bg-opacity-50">
                                            <tr>
                                                <th class="border-0 py-2">Product Name</th>
                                                <th class="border-0 py-2">Quantity</th>
                                                <th class="border-0 py-2">Price</th>
                                                <th class="border-0 py-2">Tax</th>
                                                <th class="text-end border-0 py-2">Total</th>
                                            </tr>
                                        </thead> <!-- end thead -->
                                        <tbody>
                                            
                                            <% products.forEach(product => { %>
                                            
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center gap-3">
                                                        <div class="rounded bg-light avatar d-flex align-items-center justify-content-center">
                                                            <img src="<%= product.imageUrl %>" style="height: 50px; width: 50px;" alt="" w class="<%= product.imageUrl %>">
                                                        </div>
                                                        <div>
                                                            <a href="#!" class="text-dark fw-medium fs-15"><%= product.productName %></a>
                                                            <p class="text-muted mb-0 mt-1 fs-13"><span>Size : </span> <%= product.size %></p>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td><%= product.quantity %></td>
                                                <td>$<%= product.price.toFixed(2) %></td>
                                                <!-- <td>$<%= product.discount.toFixed(2) %></td> -->
                                                <td>$<%= product.tax.toFixed(2) %></td>
                                                <td class="text-end">$<%= product.total.toFixed(2) %></td>
                                            </tr>
                                            <% }) %>
                                        </tbody> <!-- end tbody -->
                                    </table> <!-- end table -->
                                </div> <!-- end table responsive -->
                            </div> <!-- end col -->
                        </div> <!-- end row -->

                        <div class="row justify-content-end">
                            <div class="col-lg-5 col-6">
                                <div class="table-responsive">
                                    <table class="table table-borderless mb-0">
                                        <tbody>
                                            <tr class="">
                                                <td class="text-end p-0 pe-5 py-2">
                                                    <p class="mb-0"> Sub Total : </p>
                                                </td>
                                                <td class="text-end text-dark fw-medium  py-2">$<%= subtotal.toFixed(2) %></td>
                                            </tr>
                                            <tr>
                                                <td class="text-end p-0 pe-5 py-2">
                                                    <p class="mb-0">Discount : </p>
                                                </td>
                                                <td class="text-end text-dark fw-medium  py-2">-$<%= discount.toFixed(2) %></td>
                                            </tr>
                                            
                                            <tr class="border-top">
                                                <td class="text-end p-0 pe-5 py-2">
                                                    <p class="mb-0 text-dark fw-semibold">Grand Amount : </p>
                                                </td>
                                                <td class="text-end text-dark fw-semibold  py-2">$<%=  grandTotal.toFixed(2) %></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div> <!-- end col -->
                        </div> <!-- end row -->

                        

                        <div class="row mt-3">
                            <div class="col-lg-12">
                                <div class="alert alert-danger alert-icon p-2" role="alert">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm rounded bg-danger d-flex justify-content-center align-items-center fs-18 me-2 flex-shrink-0">
                                            <i class="bx bx-info-circle text-white"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                           All accounts are to be paid within 7 days from receipt of invoice. To be paid by cheque or credit card or direct payment online. 
                                           If account is not paid within 7 days the credits details supplied as confirmation of work undertaken will be charged the agreed quoted fee noted above.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3 mb-1">
                            <div class="text-end d-print-none">
                                <a href="/edit_account" class="btn btn-outline-secondary width-xl">Edit Account Details</a>
                                <a href="javascript:window.print()" class="btn btn-info width-xl">Print</a>
                                <a href="javascript:void(0);" class="btn btn-outline-primary width-xl">Make Payment</a>
                            </div>
                        </div>

                    </div> <!-- end card body -->
                </div> <!-- end card -->
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div>


</div>