<div class="page-content">
     <!-- Start Container Fluid -->
     <div class="container-xxl">
         <div class="row">
             <!-- Sidebar for Product Details -->
             <div class="col-xl-3 col-lg-4">
                 <div class="card">
                     <div class="card-body">
                         <img src="/uploads/<%= products.imageUrl %>" alt="Product Image" class="img-fluid rounded bg-light">
                         <div class="mt-3">
                             <h4><%= products.productName %></span></h4>
                             <h5 class="text-dark fw-medium mt-3">Price :</h5>
                             <h4 class="fw-semibold text-dark mt-2 d-flex align-items-center gap-2">
                                 <span class="text-muted text-decoration-line-through">$<%= products.price %></span> $<%= products.sellingPrice %> <small class="text-muted"> (<%= products.discount %> Off)</small>
                             </h4>
                             <div class="mt-3">
                                 <h5 class="text-dark fw-medium">Size :</h5>
                                 <div class="d-flex flex-wrap gap-2" role="group" aria-label="Basic checkbox toggle button group">
                                    <input type="checkbox" class="btn-check" id="size-xs1"  name="size" <%= (products.size || []).includes('XS') ? 'checked' : '' %> >
                                    <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="size-xs1">XS</label>

                                    <input type="checkbox" class="btn-check" id="size-s1" name="size"  <%= (products.size || []).includes('S') ? 'checked' : '' %>>
                                    <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="size-s1">S</label>

                                    <input type="checkbox" class="btn-check" id="size-m1" name="size"  <%= (products.size || []).includes('M') ? 'checked' : '' %>>
                                    <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="size-m1">M</label>

                                    <input type="checkbox" class="btn-check" id="size-xl1" name="size"  <%= (products.size || []).includes('XL') ? 'checked' : '' %>>
                                    <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="size-xl1">XL</label>

                                    <input type="checkbox" class="btn-check" id="size-xxl1" name="size"  <%= (products.size || []).includes('XXL') ? 'checked' : '' %>>
                                    <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="size-xxl1">XXL</label>
                                 </div>
                             </div>
                             <div class="mt-3">
                                 <h5 class="text-dark fw-medium">Colors :</h5>
                                 <div class="d-flex flex-wrap gap-2" role="group" aria-label="Basic checkbox toggle button group">
                                    <input type="checkbox" class="btn-check" id="color-dark1"  name="color" <%= (products.color || []).includes('Dark') ? 'checked' : '' %>>
                                    <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="color-dark1"> <i class="bx bxs-circle fs-18 text-dark"></i></label>

                                    <input type="checkbox" class="btn-check" id="color-yellow1"  name="color" <%= (products.color || []).includes('Yellow') ? 'checked' : '' %>>
                                    <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="color-yellow1"> <i class="bx bxs-circle fs-18 text-warning"></i></label>

                                    <input type="checkbox" class="btn-check" id="color-white1"  name="color" <%= (products.color || []).includes('White') ? 'checked' : '' %>>
                                    <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="color-white1"> <i class="bx bxs-circle fs-18 text-white"></i></label>

                                    <input type="checkbox" class="btn-check" id="color-red1"  name="color" <%= (products.color || []).includes('Red') ? 'checked' : '' %>>
                                    <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="color-red1"> <i class="bx bxs-circle fs-18 text-danger"></i></label>
                                 </div>
                             </div>
                         </div>
                     </div>
                     <div class="card-footer bg-light-subtle">
                         <div class="row g-2">
                             <div class="col-lg-6">
                                 <a href="/items" class="btn btn-outline-secondary w-100">Update Product</a>
                             </div>
                             <div class="col-lg-6">
                                 <a href="#!" class="btn btn-primary w-100">Cancel</a>
                             </div>
                         </div>
                     </div>
                 </div>
             </div>
 
             <!-- Main Form for Editing Product -->
             <div class="col-xl-9 col-lg-8">
 
                 <!-- Start of Single Form -->
                 <form action="/update/<%= products.id %>" method="post" enctype="multipart/form-data">
                      <input type="hidden" name="_method" value="PUT">

                     <div class="card">
                         <div class="card-header">
                             <h4 class="card-title"> Edit Product (<%= products.productName %>) </h4>
                         </div>
                         <div class="card-body">
                             <div class="row">
                                 <div class="col-lg-6">
                                     <div class="mb-3">
                                         <label for="productName" class="form-label">Product Name</label>
                                         <input type="text" id="productName" value="<%= products.productName %>" name="productName" class="form-control" placeholder="Item Name">
                                     </div>
                                 </div>
                                 <div class="col-lg-6">
                                    <label for="productCategories" class="form-label">Product Categories</label>
                                    <select name="productCategories" id="productCategories" class="form-control" data-choices data-choices-groups data-placeholder="Select Category">
                                      <option value="">Select Category</option>
                                         <option value="Jersey" <%= products.productCategories === 'Jersey' ? 'selected' : '' %>>Jersey</option>
                                         <option value="Clothes" <%= products.productCategories === 'Clothes' ? 'selected' : '' %>>Clothes</option>
                                         <option value="Other" <%= products.productCategories === 'Other' ? 'selected' : '' %>>Other</option>
                                    </select>
                                  </div>
                                  
                             </div>
                             <div class="row">
                                 <div class="col-lg-6">
                                     <div class="mb-3">
                                         <label for="productBrand" class="form-label">Brand</label>
                                         <input type="text" id="productBrand" value="<%= products.productBrand %>" name="productBrand" class="form-control" placeholder="Brand Name">
                                     </div>
                                 </div>
                                 
                                 <div class="col-lg-6">
                                     <label for="gender" class="form-label">Gender</label>
                                     <select class="form-control" id="gender" name="gender" value="<%= products.gender %>" data-choices data-choices-groups data-placeholder="Select Gender">
                                         <option value="">Select Gender</option>
                                         <option value="Men" <%= products.gender === 'Men' ? 'selected' : '' %>>Men</option>
                                         <option value="Women" <%= products.gender === 'Women' ? 'selected' : '' %>>Women</option>
                                         <option value="Other" <%= products.gender === 'Other' ? 'selected' : '' %>>Other</option>
                                     </select>
                                 </div>
                             </div>
                             <div class="row mb-4">
                                 <div class="col-lg-4">
                                     <div class="mt-3">
                                         <h5 class="text-dark fw-medium">Size :</h5>
                                         <div class="d-flex flex-wrap gap-2" role="group" aria-label="Basic checkbox toggle button group">
                                             <input type="checkbox" class="btn-check" id="size-xs1"  name="size" <%= (products.size || []).includes('XS') ? 'checked' : '' %> >
                                             <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="size-xs1">XS</label>
 
                                             <input type="checkbox" class="btn-check" id="size-s1" name="size"  <%= (products.size || []).includes('S') ? 'checked' : '' %>>
                                             <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="size-s1">S</label>
 
                                             <input type="checkbox" class="btn-check" id="size-m1" name="size"  <%= (products.size || []).includes('M') ? 'checked' : '' %>>
                                             <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="size-m1">M</label>
 
                                             <input type="checkbox" class="btn-check" id="size-xl1" name="size"  <%= (products.size || []).includes('XL') ? 'checked' : '' %>>
                                             <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="size-xl1">XL</label>
 
                                             <input type="checkbox" class="btn-check" id="size-xxl1" name="size"  <%= (products.size || []).includes('XXL') ? 'checked' : '' %>>
                                             <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="size-xxl1">XXL</label>
                                         </div>
                                     </div>
                                 </div>
                                 <div class="col-lg-4">
                                     <div class="mt-3">
                                         <h5 class="text-dark fw-medium">Colors :</h5>
                                         <div class="d-flex flex-wrap gap-2" role="group" aria-label="Basic checkbox toggle button group">
                                             <input type="checkbox" class="btn-check" id="color-dark1"  name="color" <%= (products.color || []).includes('Dark') ? 'checked' : '' %>>
                                             <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="color-dark1"> <i class="bx bxs-circle fs-18 text-dark"></i></label>
 
                                             <input type="checkbox" class="btn-check" id="color-yellow1"  name="color" <%= (products.color || []).includes('Yellow') ? 'checked' : '' %>>
                                             <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="color-yellow1"> <i class="bx bxs-circle fs-18 text-warning"></i></label>
 
                                             <input type="checkbox" class="btn-check" id="color-white1"  name="color" <%= (products.color || []).includes('White') ? 'checked' : '' %>>
                                             <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="color-white1"> <i class="bx bxs-circle fs-18 text-white"></i></label>
 
                                             <input type="checkbox" class="btn-check" id="color-red1"  name="color" <%= (products.color || []).includes('Red') ? 'checked' : '' %>>
                                             <label class="btn btn-light avatar-sm rounded d-flex justify-content-center align-items-center" for="color-red1"> <i class="bx bxs-circle fs-18 text-danger"></i></label>

                                             
                                         </div>
                                     </div>
                                 </div>
                                 <div class="row mt-4">
                                   <div class="col-lg-12">
                                       <div class="mb-3">
                                           <label for="image" class="form-label">Select Image</label>
                                           <input type="file" name="image" class="form-control form-control-lg">
                                           <% if (products.image) { %>
                                               <img src="/uploads/<%= products.imageUrl %>" alt="Existing Image" class="img-thumbnail mt-3">
                                           <% } %>
                                       </div>
                                   </div>
                               </div>
                               <input type="hidden" name="old_image" value="<%= products.image %>">      
                                 <div class="row mt-4">
                                     <div class="col-lg-12">
                                         <div class="mb-3">
                                             <label for="description" class="form-label">Description</label>
                                             <textarea class="form-control bg-light-subtle" name="description"value="<%= products.description %>" id="description" rows="7" placeholder="Short description about the product"><%= products.description %></textarea>
                                         </div>
                                     </div>
                                 </div>
 
                                 <div class="row">
                                     <div class="col-lg-4">
                                         <div class="mb-3">
                                             <label for="tagNumber" class="form-label">Tag Number</label>
                                             <input type="number" id="tagNumber" name="tagNumber" value="<%= products.tagNumber %>" class="form-control" placeholder="#******">
                                         </div>
                                     </div>
                                 
                                     <div class="col-lg-4">
                                         <div class="mb-3">
                                             <label for="quantity" class="form-label">Stock</label>
                                             <input type="number" id="quantity" name="quantity" value="<%= products.quantity %>" class="form-control" placeholder="Quantity">
                                         </div>
                                     </div>
                                 
                                     <div class="col-lg-4">
                                        <!-- Price Input -->
                                        <div class="mb-3">
                                            <label for="price" class="form-label">Price</label>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text fs-20"><i class='bx bx-dollar'></i></span>
                                                <input type="number" id="price" name="price" value="<%= products.price %>" class="form-control" placeholder="000">
                                            </div>
                                        </div>
                                    </div>
                                     
                                 </div>


                                 
 
                                 
                                 
                                 <div class="row">
                                     <div class="col-lg-4">
                                        <label for="discountType" class="form-label">Select Discount Type</label>
                                        <select class="form-control" id="discountType" name="discountType" data-choices data-choices-groups data-placeholder="Select Discount Type">
                                            <option value="">Discount Type</option>
                                            <option value="Percentage" <%= products.discountType === 'Percentage' ? 'selected' : '' %>>Percentage</option>
                                            <option value="Fixed" <%= products.discountType === 'Fixed' ? 'selected' : '' %>>Fixed Amount</option>
                                        </select>
                                     </div>
                                     
                                     <div class="col-lg-4">
                                         <div class="mb-3">
                                             <label for="discount" class="form-label">Discount</label>
                                             <div class="input-group mb-3">
                                                 <span class="input-group-text fs-20"><i class='bx bxs-discount'></i></span>
                                                 <input type="number" id="discount" name="discount" value="<%= products.discount %>" class="form-control" placeholder="000">
                                             </div>
                                         </div>
                                     </div>
                                     
                                     <div class="col-lg-4">
                                         <div class="mb-3">
                                             <label for="tax" class="form-label">Tax</label>
                                             <div class="input-group mb-3">
                                                 <span class="input-group-text fs-20"><i class='bx bxs-file-txt'></i></span>
                                                 <input type="number" id="tax" name="tax" value="<%= products.tax %>" class="form-control" placeholder="000">
                                             </div>
                                         </div>
                                     </div>
                                 </div>
                             
                         </div>
                         <!-- End Card Body -->
                         <div class="card-footer bg-light-subtle">
                             <div class="row g-2">
                                 <div class="col-lg-6">
                                     <button type="submit" class="btn btn-success w-100">Update Product</button>
                                 </div>
                                 <div class="col-lg-6">
                                     <a href="#!" class="btn btn-primary w-100">Cancel</a>
                                 </div>
                             </div>
                         </div>
                     </div>
                     <!-- End Card -->
                 </form>
                 <!-- End Form -->
             </div>
             <!-- End col -->
         </div>
         <!-- End row -->
     </div>
     <!-- End container-fluid -->
 </div>
 <!-- End page-content -->
 